{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "react-hooks",
    "prettier"
  ],
  "ignorePatterns": [
    "./client/tests/*",
    "./client/styles/*"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".css",
          ".scss"
        ],
        "moduleDirectory": [
          "node_modules",
          "src/"
        ]
      }
    }
  },
  "rules": {
    // javascript
    "semi": 0,
    "camelcase": [
      "warn",
      {
        "ignoreDestructuring": false,
        "ignoreImports": false,
        "ignoreGlobals": false,
        "properties": null,
        "allow": null
      }
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error",
          "log"
        ]
      }
    ],
    "no-plusplus": "warn",
    "no-shadow": "off",
    "no-param-reassign": [
      2,
      {
        "props": false
      }
    ],
    "object-curly-newline": "off",
    "no-unused-vars": 1,
    // react
    "react-hooks/exhaustive-deps": 0,
    "react/destructuring-assignment": 0,
    "react/jsx-props-no-spreading": 0,
    "react/require-default-props": 0,
    "react/jsx-no-useless-fragment": "off",
    "react/no-unstable-nested-components": 1,
    "react/forbid-prop-types": [
      1,
      {
        "forbid": [
          "any"
        ]
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx",
          ".tsx"
        ]
      }
    ],
    "react/jsx-no-bind": "off",
    "react/state-in-constructor": 0,
    // imports
    "import/no-extraneous-dependencies": 0,
    "import/prefer-default-export": 0,
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never"
      }
    ],
    // prettier
    "prettier/prettier": [
      "error",
      {
        "printWidth": true,
        "semi": false,
        "singleQuote": true,
        "tabWidth": true,
        "tabs": false,
        "trailingComma": true
      },
      null
    ]
  }
}